{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "packages/*"
      ]
    },
    "types": ["node", "jest"],
    "allowJs": true,
    "noEmit": true
  },
  "include": ["packages"],
  "exclude": [
    "packages/uitulkit-*/dist",
    "packages/uitulkit-*/node_modules/"
  ]
}
