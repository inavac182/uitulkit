{
	"name": "root",
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap --hoist",
		"bootstrap:quick": "npm run bootstrap -- --scope=@uitulkit/*",
		"build": "lerna run build --concurrency=1 --stream",
		"build:quick": "npm run build -- --scope=@uitulkit/*",
		"clean": "npm run clean:artifacts && npm run clean:packages",
		"clean:artifacts": "lerna run clean --parallel",
		"clean:packages": "lerna clean --yes",
		"dev": "lerna run start",
		"watch": "lerna run tsc --stream && lerna run --parallel watch",
		"lint": "lerna run lint --stream",
		"preinstall": "npm run clean",
		"postinstall": "npm run bootstrap",
		"typescheck": "lerna run tsc",
		"test": "lerna run test --concurrency=1 --stream",
		"test:tsc": "lerna run tsc --stream",
		"test:quick": "lerna run test:quick --concurrency=1 --stream",
		"test:coverage": "lerna run test:coverage --parallel",
		"test:watch": "lerna run test:watch --parallel"
	},
	"dependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "3.4.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.1.2",
		"@types/jest": "24.0.11",
		"@types/node": "11.13.0",
		"@types/react": "16.8.10",
		"@types/react-dom": "16.8.3",
		"@types/react-router-dom": "^5.1.5",
		"@types/testing-library__jest-dom": "^5.9.1",
		"@typescript-eslint/parser": "^3.8.0",
		"babel-eslint": "10.0.3",
		"commitlint": "^8.3.5",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"enzyme-to-json": "^3.5.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-react-app": "^5.2.0",
		"eslint-config-xo": "^0.29.1",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-config-xo-space": "^0.24.0",
		"eslint-plugin-cypress": "^2.11.1",
		"eslint-plugin-flowtype": "^3.13.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.20.5",
		"eslint-plugin-react-hooks": "^4.0.8",
		"husky": "^4.2.5",
		"jest": "^24.9.0",
		"jest-enzyme": "^7.1.2",
		"lerna": "^3.22.0",
		"lint": "^0.7.0",
		"lint-staged": "^10.2.9",
		"prettier": "^2.0.5",
		"stylelint": "^13.6.0",
		"stylelint-config-recommended": "^3.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0",
		"ts-jest": "^26.1.0",
		"tslib": "1.9.3",
		"tslint-config-prettier": "^1.18.0",
		"tslint-react": "^5.0.0",
		"typescript": "^3.9.5"
	}
}
