{
  "name": "@uitulkit/foundation",
  "description": "Themes values for @uitulkit library",
  "respository": "https://github.com/inavac182/uitulkit",
  "license": "MIT",
  "version": "0.1.0",
  "private": false,
  "files": [
    "dist"
  ],
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": " rm -rf dist node_modules coverage",
    "eslint": "eslint ./src/**/*.ts --fix",
    "lint": "npm run tsc && npm run eslint",
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o dist/css",
    "build-task:autoprefixer": "postcss dist/css/*.css --use autoprefixer -d dist/css",
    "build:scss": "npm-run-all -p build-task:*",
    "build:tsc": "tsc",
    "watch:scss": "chokidar 'src/scss/**/*.scss' -c 'npm run build:scss'",
    "watch:tcs": "tsc --watch",
    "watch": "npm-run-all -p watch:*",
    "tsc": "npm-run-all -p build:*"
  },
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "chokidar-cli": "^2.1.0",
    "node-sass": "^4.14.1",
    "node-sass-chokidar": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
